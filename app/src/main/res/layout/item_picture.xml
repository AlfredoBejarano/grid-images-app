<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/material_image_grid_padding">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/picture_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:roundedCornerRadius="@dimen/material_crane_theme_image_roundness"
        app:failureImage="@drawable/ic_placeholder_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/ic_placeholder_image" />

</android.support.constraint.ConstraintLayout>